<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@mipmap/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문하기"
                android:textColor="#b31e1801"
                android:textSize="18sp" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/pay_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingBottom="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:id="@+id/tv_labelaasd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentTop="true"
                        android:text="수령 받을 장소"
                        android:textSize="12sp" />

                    <EditText
                        android:layout_below="@+id/tv_labelaasd"
                        android:id="@+id/et_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:background="#00000000"
                        android:text="3학년 2반 교실"/>

                    <RelativeLayout
                        android:id="@+id/btn_modify_location"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_alignParentEnd="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true">

                        <View
                            android:layout_width="28dp"
                            android:layout_height="5dp"
                            android:background="@color/colorPrimary"
                            android:layout_alignParentBottom="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="수정"
                            android:textStyle="bold"
                            android:textColor="#b31e1801"
                            android:textSize="12sp" />
                    </RelativeLayout>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorBackground" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <TextView
                        android:id="@+id/tv_asdasd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="희망 수령 시간"
                        android:textSize="12sp" />

                    <EditText
                        android:layout_below="@+id/tv_asdasd"
                        android:id="@+id/et_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:background="#00000000"
                        android:text="2교시 쉬는시간"/>

                    <RelativeLayout
                        android:id="@+id/btn_modify_time"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true">

                        <View
                            android:layout_width="28dp"
                            android:layout_height="5dp"
                            android:background="@color/colorPrimary"
                            android:layout_alignParentBottom="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="수정"
                            android:textStyle="bold"
                            android:textColor="#b31e1801"
                            android:textSize="12sp" />
                    </RelativeLayout>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorBackground" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="요청사항"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="#00000000"
                    android:textSize="14sp"
                    android:ems="10"
                    android:inputType="textMultiLine"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="23dp"
                    android:background="@color/colorBackground" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="15dp"
                    android:text="결제 방법"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btn_payRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/circle_active"
                            android:padding="14dp"
                            android:src="@drawable/ic_credit" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="바로 결제"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/btn_payMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/circle_deactive"
                            android:padding="14dp"
                            android:src="@drawable/ic_cash" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="현금 결제" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_payPlease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/circle_deactive"
                            android:padding="14dp"
                            android:src="@drawable/ic_please" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="대신 구매" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pay_type"
                android:layout_margin="16dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="27sp"
                        android:text="3300원"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:textSize="18sp"
                            android:text="3000원"/>

                        <TextView
                            android:id="@id/tv_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:text="+ (요청료) 300원"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#141e1801" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_itemList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="메뉴"
                        android:textSize="12sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/tv_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:text=""/>

                    <RelativeLayout
                        android:id="@+id/btn_modify"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="17dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true">

                        <View
                            android:layout_width="48dp"
                            android:layout_height="5dp"
                            android:background="@color/colorPrimary"
                            android:layout_alignParentBottom="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="수정하기"
                            android:textStyle="bold"
                            android:textColor="#b31e1801"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:background="#141e1801" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="25dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">

                <View
                    android:layout_width="100dp"
                    android:layout_height="9dp"
                    android:background="@color/colorPrimary"
                    android:layout_alignParentBottom="true"/>

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="결제하기"
                    android:textColor="#b31e1801"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>
