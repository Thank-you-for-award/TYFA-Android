<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결제 정보 입력"
                android:textColor="#000000"
                android:textSize="24dp" />

        </LinearLayout>

        <View
            android:layout_width="36dp"
            android:layout_height="4dp"
            android:background="#ffce0a" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:hint="@string/pay_cardNumber"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="72sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2sp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/payment_cardnum_input1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#ffce0a" />

            </LinearLayout>


            <TextView
                android:layout_width="14sp"
                android:layout_height="match_parent"
                android:layout_marginRight="2sp"
                android:gravity="center_vertical"
                android:text="---" />

            <LinearLayout
                android:layout_width="72sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2sp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/payment_cardnum_input2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#ffce0a" />

            </LinearLayout>


            <TextView
                android:layout_width="14sp"
                android:layout_height="match_parent"
                android:layout_marginRight="2sp"
                android:gravity="center_vertical"
                android:text="---" />

            <LinearLayout
                android:layout_width="72sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2sp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/payment_cardnum_input3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#ffce0a" />

            </LinearLayout>


            <TextView
                android:layout_width="14sp"
                android:layout_height="match_parent"
                android:layout_marginRight="2sp"
                android:gravity="center_vertical"
                android:text="---" />

            <LinearLayout
                android:layout_width="72sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2sp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/payment_cardnum_input4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#ffce0a" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:text="만료 기간"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp">


        <LinearLayout
            android:layout_width="36sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2sp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/payment_enddate_input1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#ffce0a" />

        </LinearLayout>

        <TextView
            android:layout_width="14sp"
            android:layout_height="match_parent"
            android:layout_marginRight="2sp"
            android:gravity="center_vertical"
            android:text="/" />

        <LinearLayout
            android:layout_width="36sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2sp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/payment_enddate_input2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#ffce0a" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:text="카드 비밀번호 앞 두자리"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp">


        <LinearLayout
            android:layout_width="36sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2sp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/payment_cardpw_input1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#ffce0a" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="36sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2sp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/payment_cardpw_input2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:inputType="textPassword"
                android:textSize="18sp" />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:text="생년월일"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp">


        <LinearLayout
            android:layout_width="108sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2sp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/payment_birth_input1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#ffce0a" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/payment_layout1"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="200dp"
        android:background="@color/colorWhite">

        <View
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:background="#ffce0a" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:gravity="center_horizontal"
            android:text="다음으로"
            android:textColor="#1e1801"
            android:textSize="28sp" />
    </RelativeLayout>


</LinearLayout>